<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionPeliculas.Pages.ListPeliculasPage"
             Title="PelÃ­culas">

    <CollectionView x:Name="ListaPeliculas"
                    ItemsLayout="VerticalList"
                    Margin="10">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Padding="10" 
                       Margin="0,5" 
                       BorderColor="#ddd" 
                       CornerRadius="12"
                       BackgroundColor="White">

                    <Grid ColumnDefinitions="90, *">

                        <!-- Imagen -->
                        <Image Grid.Column="0"
                               Source="{Binding PosterImage}"
                               WidthRequest="80"
                               HeightRequest="120"
                               Aspect="AspectFill"/>

                        <!-- TÃ­tulo y botÃ³n -->
                        <VerticalStackLayout Grid.Column="1" 
                                             Spacing="10" 
                                             Padding="10,0,0,0"
                                             VerticalOptions="Center">

                            <Label Text="{Binding Titulo}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   MaxLines="2"
                                   LineBreakMode="WordWrap"/>

                            <Button Text="ðŸ” Ver informaciÃ³n completa" 
                                    Clicked="OnVerInfoClicked"
                                    CommandParameter="{Binding Id}"
                                    BackgroundColor="#2196F3"
                                    TextColor="White"
                                    CornerRadius="8"
                                    HeightRequest="40"
                                    FontSize="13"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>