<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionPeliculas.Pages.GetByIdPage"
             Title="Obtener por Id"
             Padding="10">

    <VerticalStackLayout Spacing="12">
        <Entry x:Name="IdEntry" Placeholder="Id" Keyboard="Numeric" />
        <Button Text="Obtener" Clicked="OnObtenerClicked" />

        <Frame Padding="10" CornerRadius="8" BorderColor="#ccc">
            <VerticalStackLayout>
                <Label x:Name="TituloLabel" />
                <Label x:Name="DirectorLabel" />
                <Label x:Name="GeneroLabel" />
                <Label x:Name="AnhoLabel" />
            </VerticalStackLayout>
        </Frame>
    </VerticalStackLayout>

</ContentPage>