<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionPeliculas.Pages.CreatePeliculaPage"
             Title="Crear Pelicula"
             Padding="10">

    <VerticalStackLayout Spacing="12">
        <Entry x:Name="TituloEntry" Placeholder="Titulo" />
        <Entry x:Name="DirectorEntry" Placeholder="Director" />
        <Entry x:Name="GeneroEntry" Placeholder="Genero" />
        <Entry x:Name="AnhoEntry" Placeholder="Anho" Keyboard="Numeric" />
        <Entry x:Name="RutaImagenEntry" Placeholder="Ruta imagen (URL)" />
        <Editor x:Name="SinopsisEditor" Placeholder="Sinopsis" AutoSize="TextChanges" HeightRequest="100" />
        <HorizontalStackLayout>
            <Button Text="Crear" Clicked="OnCrearClicked" />
            <Button Text="Subir poster" Clicked="OnSubirPosterClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>