<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestionPeliculas.Pages.MainMenuPage"
             Title="Menu Principal"
             Padding="20">

    <VerticalStackLayout Spacing="16" VerticalOptions="CenterAndExpand">
        <Label Text="Gestion Peliculas" FontSize="24" HorizontalOptions="Center" />

        <Button Text="Ver todas las peliculas" Clicked="OnVerTodasClicked" />
        <Button Text="Crear pelicula" Clicked="OnCrearClicked" />
        <Button Text="Obtener pelicula por Id" Clicked="OnObtenerByIdClicked" />
        <Button Text="Actualizar pelicula" Clicked="OnActualizarClicked" />
        <Button Text="Eliminar pelicula" Clicked="OnEliminarClicked" />
    </VerticalStackLayout>

</ContentPage>